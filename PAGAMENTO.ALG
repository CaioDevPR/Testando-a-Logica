Algoritmo "Pagamento"



Var
nome :caractere
pagamento, valorHora, horasTrabalhadas : real



Inicio

 escreval("CAPITAL HUMANO")
 escreva("Nome: ")
 leia(nome)
 escreva("Valor por Hora: ")
 leia(valorHora)
 escreva("horas Trabalhadas: ")
 leia(horasTrabalhadas)
 
 pagamento <- valorHora * horasTrabalhadas
 
 escreva("O pagamento de ", nome , " dever ser de : " , pagamento)
 
 

Fimalgoritmo